    "@folio/tags": "~1.1.0",
    "@folio/users": "~2.17.0",
    "@folio/vendors": "~1.1.0",
    "react": "^16.3.0"
  },
  "devDependencies": {
    "@folio/eslint-config-stripes": "^3.2.0",
    "@folio/stripes-cli": "^1.6.0",
    "moment": "^2.22.2"
  }
